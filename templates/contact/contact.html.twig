{% extends 'layout.html.twig' %}

{% block title 'Contact' %}

{% block main %}
   <div class="container">
      <h2 class="text-center mt-4" id="Contacter">Me contacter</h2>

      <form class="contact-form">
         <div class="contact-wrapper">
            <div class="content-form">
               <div class="contact-info">
                  <div class="form-group">
                     <label>Nom - prénom</label>
                     {{ form_widget(form.name) }}
                     <p class="error">{{ form_errors(form.name) }}</p>
                  </div>
                  <div class="form-group">
                     <label>Email</label>
                     {{ form_widget(form.email) }}
                     <p class="error">{{ form_errors(form.email) }}</p>
                  </div>
                  <div class="form-group">
                     <label>Téléphone</label>
                     {{ form_widget(form.phone) }}
                     <p class="error">{{ form_errors(form.phone) }}</p>
                  </div>
               </div>
               <div class="contact-message">
                  <div class="form-group">
                     <label>Mon message</label>
                     {{ form_widget(form.message) }}
                     <p class="error">{{ form_errors(form.message) }}</p>
                  </div>
               </div>
            </div>
            <div class="content-submit">
               <div class="form-group">
                  <button class="btn btn-dark w-100 mt-3">Envoyer</button>
               </div>
            </div>
         </div>

      </form>
   </div>
{% endblock %}
