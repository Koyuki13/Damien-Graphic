{% extends 'layout.html.twig' %}

{% block title 'Contact' %}

{% block main %}
   <div class="container">
      <div class="bg-contact">
         <img src="{{ asset('uploads/images/bg-contact.png') }}" alt="background">
      </div>
      <form class="contact-form mb-5" method="post">

         <h1 class="h2 text-center position-relative my-5" id="Contacter">Contact & devis</h1>
         <div class="contact-wrapper">
            <div class="content-form">
               <div class="contact-info">
                  <div class="form-group">
                     {{ form_label(form.name) }}
                     {{ form_widget(form.name) }}
                     <p class="error">{{ form_errors(form.name) }}</p>
                  </div>
                  <div class="form-group">
                     {{ form_label(form.email) }}
                     {{ form_widget(form.email) }}
                     <p class="error">{{ form_errors(form.email) }}</p>
                  </div>
                  <div class="form-group">
                     {{ form_label(form.phone) }}
                     {{ form_widget(form.phone) }}
                     <p class="error">{{ form_errors(form.phone) }}</p>
                  </div>
               </div>
               <div class="contact-message">
                  <div class="form-group">
                     {{ form_label(form.message) }}
                     {{ form_widget(form.message) }}
                     <p class="error">{{ form_errors(form.message) }}</p>
                  </div>
               </div>
            </div>
            <div class="content-submit">
               <div class="form-group">
                  <button type="submit" class="btn btn-dark w-100 mt-3">Envoyer</button>
               </div>
            </div>
            <div class="contact-info mt-3">
               <small><i>les champs marqués d'un astérisque (*) sont obligatoires</i></small>
            </div>
         </div>

      </form>
   </div>
{% endblock %}
