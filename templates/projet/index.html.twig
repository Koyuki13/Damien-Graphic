{% extends 'layout.html.twig' %}

{% block title %}Hello ProjetController!{% endblock %}

{% block main %}
   <div class="container-fluid mt-4">
      <div class="row row-cols-1 row-cols-md-3 g-4">
         {% set project = null %}
         {% for image in images %}
            {% if image.projet is not null and image.projet.id != project %}
               <div class="col mb-3">
                  <div class="card h-100 p-2">
                     <img src="{{ asset('uploads/images/' ~ image.image) | imagine_filter('sizeOne') }}"
                          class="card-img" alt="...">
                     <div class="card-img-overlay text-center d-flex flex-column justify-content-around">
                        <h5 class="card-title font-weight-bold">{{ image.projet.title }}</h5>
                        <a href="#" class="btn btn-dark d-block">Voir le projet</a>
                     </div>
                     <div class="show-mobil d-md-none text-center pt-2">
                        <a href="#" class="btn btn-sm btn-dark">
                           Voir le projet</a></div>
                  </div>
               </div>
               {% set project = image.projet.id %}
            {% endif %}
         {% endfor %}

      </div>
   </div>
{% endblock %}

{% block stylesheets %}
   {{ parent() }}
   {{ encore_entry_link_tags('projets') }}
{% endblock %}
