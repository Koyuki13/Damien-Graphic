{% extends 'layout.html.twig' %}

{% block title 'Les différents projets et refonte graphique réalisés' %}

{% block main %}
   <div class="container-fluid mt-4">
      <div class="row row-cols-1 row-cols-md-3 g-4">
         {% for project in projects %}
            {% for image in project.images | slice(0,1) %}
                  <div class="col mb-3">
                     <div class="card p-2">
                        <img src="{{ asset('uploads/images/' ~ image.image) | imagine_filter('sizeOne') }}"
                             class="card-img" alt="...">
                        <div class="card-img-overlay text-center d-flex flex-column justify-content-around">
                           <h5 class="card-title font-weight-bold">{{ project.title }}</h5>
                           <a href="{{ path('detail', {'id': project.id}) }}" class="btn btn-dark d-block">Voir le projet</a>
                        </div>
                        <div class="show-mobil d-md-none text-center pt-2">
                           <a href="{{ path('detail', {'id': project.id}) }}" class="btn btn-sm btn-dark">
                              Voir le projet</a></div>
                     </div>
                  </div>
            {% endfor%}
         {% endfor %}

      </div>
   </div>
{% endblock %}

{% block stylesheets %}
   {{ parent() }}
   {{ encore_entry_link_tags('projets') }}
{% endblock %}
